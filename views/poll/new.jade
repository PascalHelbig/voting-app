extends ../layout

block content
  h1 New Poll

  form.form-horizontal(action='/polls/new', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='question') Question
      .col-sm-7
        input.form-control(type='text', name='question', id='question')
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          i.fa.fa-pencil
          | Add Poll
